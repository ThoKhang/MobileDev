<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Trạng thái khi nhấn -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6E6FA" /> <!-- Màu nền khi nhấn -->
            <stroke android:width="2dp" android:color="#514eb6" /> <!-- Viền -->
            <corners android:radius="8dp" />
        </shape>
    </item>
    <!-- Trạng thái mặc định -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" />
            <stroke android:width="2dp" android:color="#514eb6" />
            <corners android:radius="8dp" />
        </shape>
    </item>
</selector>