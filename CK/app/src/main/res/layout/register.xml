<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="16dp"
    tools:context=".MainActivity">
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="348dp"
        android:layout_height="204dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/register"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/helloDangKy320"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:fontFamily="@font/fontlora"
        android:text="ĐĂNG KÝ TÀI KHOẢN"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/gioiThieuDangKy320"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp"
        android:alpha="0.6"
        android:fontFamily="@font/fontlora"
        android:gravity="center_horizontal"
        android:text="Xin chào đến với app nghe nhạc của\n Khang, mời bạn đăng ký"
        android:textStyle="italic|bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/helloDangKy320" />

    <TextView
        android:id="@+id/textDangKy320"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/fontlora"
        android:text="Thông Tin Tài Khoản"
        android:textSize="18dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/gioiThieuDangKy320" />

    <TextView
        android:id="@+id/textDangKyTenDangNhap320"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/fontlora"
        android:text="Họ và tên người dùng"
        android:textSize="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDangKy320" />

    <LinearLayout
        android:id="@+id/editTenTK320"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.39"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDangKyTenDangNhap320">


        <EditText
            android:id="@+id/editTextTenDangNhap320"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@null"
            android:fontFamily="@font/fontlora"
            android:hint="Trần Văn Thọ Khang" />
    </LinearLayout>

    <EditText
        android:id="@+id/User320"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@null"
        android:fontFamily="@font/fontlora"
        android:textSize="16dp"
        android:text="Tên đăng nhập"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.073"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTenTK320" />

    <LinearLayout
        android:id="@+id/dangKyUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/User320" >
        <EditText
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@null"
            android:fontFamily="@font/fontlora"
            android:hint="ThoKhang1505"
             />
</LinearLayout>

    <TextView
        android:id="@+id/textUser320"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Mật khẩu"
        android:textSize="16dp"
        android:fontFamily="@font/fontlora"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.059"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dangKyUser" />

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/rounded_rectangle"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@+id/textUser320"
        tools:layout_editor_absoluteX="34dp">

        <TextView
            android:id="@+id/textPassword320"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:background="@null"
            android:fontFamily="@font/fontlora"
            android:hint="Ví dụ: 123456789"
            android:textSize="16dp" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonRegister320"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Đăng Ký"
        android:fontFamily="@font/fontlora"
        android:textStyle="bold"
        android:textSize="16dp"
        android:backgroundTint="#514eb6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#514eb6"
        android:textStyle="bold|italic"
        android:text="Bạn đã có tài khoản rồi?\n đăng nhập ngay!"
        android:alpha="0.6"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="736dp" />
</androidx.constraintlayout.widget.ConstraintLayout>